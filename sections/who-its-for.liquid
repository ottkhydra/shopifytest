
{% comment %}
  Who It's For Section
  Target audience clarity
{% endcomment %}

<section 
  class="who-its-for section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="who-its-for__container page-width-content">
    {% if section.settings.heading != blank %}
      <div class="who-its-for__header animate-on-scroll">
        <h2 class="who-its-for__title">{{ section.settings.heading }}</h2>
        {% if section.settings.description != blank %}
          <p class="who-its-for__description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="who-its-for__list">
      {% for block in section.blocks %}
        <div class="who-its-for__item animate-on-scroll" {{ block.shopify_attributes }} data-delay="{{ forloop.index | times: 50 }}">
          <div class="who-its-for__checkmark">âœ“</div>
          {% if block.settings.text != blank %}
            <p class="who-its-for__text">{{ block.settings.text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .who-its-for {
    padding: clamp(4.5rem, 6vw, 7rem) 0;
    background: #ffffff;
  }

  .who-its-for__container {
    width: 100%;
    max-width: 720px;
    margin: 0 auto;
  }

  .who-its-for__header {
    text-align: center;
    margin-bottom: clamp(2.75rem, 5vw, 3.75rem);
  }

  .who-its-for__title {
    font-size: clamp(2.1rem, 4vw, 2.9rem);
    margin: 0 0 0.75rem 0;
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.15;
    color: #0f172a;
  }

  .who-its-for__description {
    font-size: 1.05rem;
    line-height: 1.6;
    opacity: 0.78;
    margin: 0;
    color: #1f2937;
  }

  .who-its-for__list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .who-its-for__item {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 0.85rem 1rem;
    padding: 1.25rem 1.4rem;
    background: #f7f9fc;
    border-radius: 12px;
    border: 1px solid rgba(15, 23, 42, 0.06);
    box-shadow: 0 10px 28px rgba(15, 23, 42, 0.05);
  }

  .who-its-for__checkmark {
    width: 24px;
    height: 24px;
    border-radius: 10px;
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: #ffffff;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 0.85rem;
    font-weight: 700;
    box-shadow: 0 10px 22px rgba(22, 163, 74, 0.28);
  }

  .who-its-for__text {
    font-size: 1.02rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
    color: #0f172a;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(14px);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-on-scroll {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Who It's For",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Perfect for you if"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "This product is designed for people who value quality and thoughtful design."
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "options": [
        {
          "value": "page-width",
          "label": "Page Width"
        },
        {
          "value": "full-width",
          "label": "Full Width"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "You value quality and thoughtful design"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Who It's For",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "text": "You value quality and thoughtful design"
          }
        },
        {
          "type": "item",
          "settings": {
            "text": "You want products that last"
          }
        },
        {
          "type": "item",
          "settings": {
            "text": "You appreciate attention to detail"
          }
        }
      ]
    }
  ]
}
{% endschema %}

