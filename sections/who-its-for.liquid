
{% comment %}
  Who It's For Section
  Target audience clarity
{% endcomment %}

<section 
  class="who-its-for section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="who-its-for__container page-width-content">
    {% if section.settings.heading != blank %}
      <div class="who-its-for__header animate-on-scroll">
        <h2 class="who-its-for__title">{{ section.settings.heading }}</h2>
        {% if section.settings.description != blank %}
          <p class="who-its-for__description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="who-its-for__list">
      {% for block in section.blocks %}
        <div class="who-its-for__item animate-on-scroll" {{ block.shopify_attributes }} data-delay="{{ forloop.index | times: 50 }}">
          <div class="who-its-for__checkmark">âœ“</div>
          {% if block.settings.text != blank %}
            <p class="who-its-for__text">{{ block.settings.text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .who-its-for {
    padding: 5rem 0;
  }

  @media (min-width: 750px) {
    .who-its-for {
      padding: 6rem 0;
    }
  }

  .who-its-for__container {
    width: 100%;
    max-width: 700px;
    margin: 0 auto;
  }

  .who-its-for__header {
    text-align: center;
    margin-bottom: 3.5rem;
  }

  .who-its-for__title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    margin: 0 0 1rem 0;
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .who-its-for__description {
    font-size: 1.125rem;
    line-height: 1.5;
    opacity: 0.7;
    margin: 0;
  }

  .who-its-for__list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .who-its-for__item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--color-background);
    border-radius: 8px;
    border: 1px solid var(--color-border, rgba(0, 0, 0, 0.08));
  }

  .who-its-for__checkmark {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: var(--color-foreground);
    color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .who-its-for__text {
    font-size: 1.0625rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
    flex: 1;
  }

  /* Animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-on-scroll {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Who It's For",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Perfect for you if"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "This product is designed for people who value quality and thoughtful design."
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "options": [
        {
          "value": "page-width",
          "label": "Page Width"
        },
        {
          "value": "full-width",
          "label": "Full Width"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "You value quality and thoughtful design"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Who It's For",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "text": "You value quality and thoughtful design"
          }
        },
        {
          "type": "item",
          "settings": {
            "text": "You want products that last"
          }
        },
        {
          "type": "item",
          "settings": {
            "text": "You appreciate attention to detail"
          }
        }
      ]
    }
  ]
}
{% endschema %}

