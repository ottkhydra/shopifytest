
{% comment %}
  How It Works Section
  Simple step-based explanation
{% endcomment %}

<section 
  class="how-it-works section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="how-it-works__container page-width-content">
    {% if section.settings.heading != blank %}
      <div class="how-it-works__header animate-on-scroll">
        <h2 class="how-it-works__title">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="how-it-works__steps">
      {% for block in section.blocks %}
        <div class="how-it-works__step animate-on-scroll" {{ block.shopify_attributes }} data-delay="{{ forloop.index | times: 100 }}">
          <div class="how-it-works__step-number">
            <span>{{ forloop.index }}</span>
          </div>
          
          {% if block.settings.title != blank %}
            <h3 class="how-it-works__step-title">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <p class="how-it-works__step-description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .how-it-works {
    padding: 5rem 0;
  }

  @media (min-width: 750px) {
    .how-it-works {
      padding: 6rem 0;
    }
  }

  .how-it-works__container {
    width: 100%;
  }

  .how-it-works__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .how-it-works__title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    margin: 0;
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .how-it-works__steps {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (min-width: 750px) {
    .how-it-works__steps {
      gap: 4rem;
    }
  }

  .how-it-works__step {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    position: relative;
  }

  @media (min-width: 750px) {
    .how-it-works__step {
      flex-direction: row;
      align-items: flex-start;
      gap: 2rem;
    }
  }

  .how-it-works__step-number {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--color-foreground);
    color: var(--color-background);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .how-it-works__step-content {
    flex: 1;
  }

  .how-it-works__step-title {
    font-size: 1.375rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .how-it-works__step-description {
    font-size: 1.0625rem;
    line-height: 1.6;
    opacity: 0.8;
    margin: 0;
  }

  /* Animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-on-scroll {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
{% endstylesheet %}

