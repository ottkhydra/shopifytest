
{% comment %}
  Product Benefits Section (Product Page)
  Benefit-focused content, not features
{% endcomment %}

<section 
  class="product-benefits-page section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="product-benefits-page__container page-width-content">
    {% if section.settings.heading != blank %}
      <div class="product-benefits-page__header animate-on-scroll">
        <h2 class="product-benefits-page__title">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="product-benefits-page__grid">
      {% for block in section.blocks %}
        <div class="product-benefits-page__item animate-on-scroll" {{ block.shopify_attributes }} data-delay="{{ forloop.index | times: 50 }}">
          {% if block.settings.icon != blank %}
            <div class="product-benefits-page__icon">
              {% if block.settings.icon contains '.svg' %}
                <img 
                  src="{{ block.settings.icon | asset_url }}" 
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                >
              {% else %}
                <span class="product-benefits-page__icon-text">{{ block.settings.icon }}</span>
              {% endif %}
            </div>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="product-benefits-page__title-item">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <p class="product-benefits-page__description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .product-benefits-page {
    padding: clamp(4.5rem, 6vw, 7rem) 0;
    background: #f7f8fb;
  }

  .product-benefits-page__container { width: 100%; }

  .product-benefits-page__header {
    text-align: center;
    margin-bottom: clamp(3rem, 5vw, 4.25rem);
  }

  .product-benefits-page__title {
    font-size: clamp(2.1rem, 4vw, 2.9rem);
    margin: 0;
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.15;
    color: #0f172a;
  }

  .product-benefits-page__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(1.8rem, 4vw, 2.4rem);
  }

  @media (min-width: 900px) {
    .product-benefits-page__grid { grid-template-columns: repeat(2, minmax(0, 1fr)); }
  }

  .product-benefits-page__item {
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
    padding: 1.6rem;
    border-radius: 14px;
    background: #ffffff;
    border: 1px solid rgba(15, 23, 42, 0.06);
    box-shadow: 0 14px 34px rgba(15, 23, 42, 0.08);
  }

  .product-benefits-page__icon {
    width: 52px;
    height: 52px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: linear-gradient(135deg, #eef2ff 0%, #e0f2fe 100%);
    color: #0f172a;
    font-weight: 700;
  }

  .product-benefits-page__icon img {
    width: 26px;
    height: 26px;
    object-fit: contain;
  }

  .product-benefits-page__icon-text {
    font-size: 1.5rem;
    line-height: 1;
  }

  .product-benefits-page__title-item {
    font-size: 1.15rem;
    font-weight: 600;
    margin: 0;
    letter-spacing: -0.01em;
    line-height: 1.35;
    color: #0f172a;
  }

  .product-benefits-page__description {
    font-size: 1.02rem;
    line-height: 1.6;
    opacity: 0.86;
    margin: 0;
    color: #1f2937;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(14px);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-on-scroll {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
{% endstylesheet %}

{% schema %}
