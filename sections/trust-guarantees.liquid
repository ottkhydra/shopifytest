
{% comment %}
  Trust & Guarantees Section
  Display shipping, returns, support, and security information
{% endcomment %}

<section 
  class="trust-guarantees section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="trust-guarantees__container page-width-content">
    <div class="trust-guarantees__grid">
      {% for block in section.blocks %}
        <div class="trust-guarantees__item animate-on-scroll" {{ block.shopify_attributes }} data-delay="{{ forloop.index | times: 50 }}">
          {% if block.settings.icon != blank %}
            <div class="trust-guarantees__icon">
              {% if block.settings.icon contains '.svg' %}
                <img 
                  src="{{ block.settings.icon | asset_url }}" 
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                >
              {% else %}
                {{ block.settings.icon }}
              {% endif %}
            </div>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="trust-guarantees__title">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <p class="trust-guarantees__description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .trust-guarantees {
    padding: 5rem 0;
    border-top: 1px solid var(--color-border, rgba(0, 0, 0, 0.08));
    border-bottom: 1px solid var(--color-border, rgba(0, 0, 0, 0.08));
  }

  @media (min-width: 750px) {
    .trust-guarantees {
      padding: 6rem 0;
    }
  }

  .trust-guarantees__container {
    width: 100%;
  }

  .trust-guarantees__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 750px) {
    .trust-guarantees__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 4rem;
    }
  }

  @media (min-width: 990px) {
    .trust-guarantees__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 3rem;
    }
  }

  .trust-guarantees__item {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .trust-guarantees__icon {
    font-size: 2rem;
    line-height: 1;
    margin-bottom: 0.25rem;
    opacity: 0.9;
  }

  .trust-guarantees__icon img {
    width: 2rem;
    height: 2rem;
    object-fit: contain;
  }

  .trust-guarantees__title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    letter-spacing: -0.01em;
  }

  .trust-guarantees__description {
    font-size: 0.9375rem;
    line-height: 1.5;
    opacity: 0.7;
    margin: 0;
    max-width: 240px;
  }

  /* Animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-on-scroll {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
{% endstylesheet %}

