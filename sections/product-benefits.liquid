
{% comment %}
  Product Benefits Grid Section
  Shows key benefits with icons in a clean grid layout
{% endcomment %}

<section 
  class="product-benefits section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="product-benefits__container page-width-content">
    {% if section.settings.heading != blank %}
      <div class="product-benefits__header animate-on-scroll">
        <h2 class="product-benefits__title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="product-benefits__subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="product-benefits__grid">
      {% for block in section.blocks %}
        <div class="product-benefits__item animate-on-scroll" {{ block.shopify_attributes }} data-delay="{{ forloop.index | times: 50 }}">
          {% if block.settings.icon != blank %}
            <div class="product-benefits__icon">
              {% if block.settings.icon contains '.svg' %}
                <img 
                  src="{{ block.settings.icon | asset_url }}" 
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                >
              {% else %}
                <span class="product-benefits__icon-text">{{ block.settings.icon }}</span>
              {% endif %}
            </div>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="product-benefits__item-title">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <p class="product-benefits__item-description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .product-benefits {
    padding: 4rem 0;
  }

  .product-benefits__container {
    width: 100%;
  }

  .product-benefits__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .product-benefits__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .product-benefits__subtitle {
    font-size: 1.125rem;
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
  }

  .product-benefits__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 750px) {
    .product-benefits__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
    }
  }

  @media (min-width: 990px) {
    .product-benefits__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .product-benefits__item {
    text-align: center;
    padding: 2rem 1rem;
    border-radius: var(--style-border-radius, 12px);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .product-benefits__item:hover {
    transform: translateY(-4px);
  }

  .product-benefits__icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background);
    border-radius: 50%;
    font-size: 2rem;
  }

  .product-benefits__icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .product-benefits__icon-text {
    font-size: 2rem;
    line-height: 1;
  }

  .product-benefits__item-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .product-benefits__item-description {
    font-size: 1rem;
    line-height: 1.6;
    opacity: 0.85;
    margin: 0;
  }

  /* Animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }
{% endstylesheet %}

