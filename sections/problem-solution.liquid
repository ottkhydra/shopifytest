      "label": "Problem Image"
    },
    {
      "type": "header",
      "content": "Solution Section"
    },
    {
      "type": "text",
      "id": "solution_label",
      "label": "Solution Label",
      "default": "The Solution"
    },
    {
      "type": "text",
      "id": "solution_heading",
      "label": "Solution Heading",
      "default": "Meet the difference"
    },
    {
      "type": "richtext",
      "id": "solution_text",
      "label": "Solution Text",
