
{% comment %}
  Problem → Solution Section
  Emotional and rational framing of customer problem and product solution
{% endcomment %}

<section 
  class="problem-solution section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="problem-solution__container">
    <div class="problem-solution__grid page-width-content">
      {% if section.settings.problem_image != blank %}
        <div class="problem-solution__media problem-solution__media--problem animate-on-scroll">
          {% assign problem_img = section.settings.problem_image | image_url: width: 1200 %}
          <img 
            src="{{ problem_img }}" 
            loading="lazy"
            alt="{{ section.settings.problem_heading | escape }}"
            class="problem-solution__image"
            sizes="(min-width: 990px) 50vw, 100vw"
          />
        </div>
      {% endif %}

      <div class="problem-solution__content problem-solution__content--problem animate-on-scroll" data-delay="100">
        <div class="problem-solution__content-inner">
          {% if section.settings.problem_label != blank %}
            <p class="problem-solution__label problem-solution__label--problem">{{ section.settings.problem_label }}</p>
          {% endif %}

          {% if section.settings.problem_heading != blank %}
            <h2 class="problem-solution__heading problem-solution__heading--problem">{{ section.settings.problem_heading }}</h2>
          {% endif %}

          {% if section.settings.problem_text != blank %}
            <div class="problem-solution__text rte">
              {{ section.settings.problem_text }}
            </div>
          {% endif %}
        </div>
      </div>

      {% if section.settings.solution_image != blank %}
        <div class="problem-solution__media problem-solution__media--solution animate-on-scroll" data-delay="100">
          {% assign solution_img = section.settings.solution_image | image_url: width: 1200 %}
          <img 
            src="{{ solution_img }}" 
            loading="lazy"
            alt="{{ section.settings.solution_heading | escape }}"
            class="problem-solution__image"
            sizes="(min-width: 990px) 50vw, 100vw"
          />
        </div>
      {% endif %}

      <div class="problem-solution__content problem-solution__content--solution animate-on-scroll" data-delay="200">
        <div class="problem-solution__content-inner">
          {% if section.settings.solution_label != blank %}
            <p class="problem-solution__label problem-solution__label--solution">{{ section.settings.solution_label }}</p>
          {% endif %}

          {% if section.settings.solution_heading != blank %}
            <h2 class="problem-solution__heading problem-solution__heading--solution">{{ section.settings.solution_heading }}</h2>
          {% endif %}

          {% if section.settings.solution_text != blank %}
            <div class="problem-solution__text rte">
              {{ section.settings.solution_text }}
            </div>
          {% endif %}

          {% if section.settings.product != blank %}
            <div class="problem-solution__cta">
              <a 
                href="{{ section.settings.product.url }}" 
                class="button button--primary"
              >
                {{ section.settings.cta_text | default: 'Learn More' }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .problem-solution {
    padding: clamp(4.5rem, 6vw, 7rem) 0;
    background: #ffffff;
  }

  .problem-solution__container {
    width: 100%;
  }

  .problem-solution__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(2.5rem, 5vw, 4rem);
  }

  @media (min-width: 990px) {
    .problem-solution__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: clamp(3.5rem, 6vw, 5.5rem);
      align-items: center;
    }
  }

  .problem-solution__media {
    width: 100%;
    order: 1;
    filter: drop-shadow(0 14px 38px rgba(15, 23, 42, 0.12));
  }

  @media (min-width: 990px) {
    .problem-solution__media--problem { order: 1; }
    .problem-solution__content--problem { order: 2; }
    .problem-solution__media--solution { order: 4; }
    .problem-solution__content--solution { order: 3; }
  }

  .problem-solution__image {
    width: 100%;
    border-radius: 18px;
    aspect-ratio: 4 / 3;
    object-fit: cover;
    background: #f8fafc;
  }

  .problem-solution__content {
    width: 100%;
    order: 2;
    display: flex;
    align-items: center;
  }

  @media (min-width: 990px) {
    .problem-solution__content { order: auto; }
  }

  .problem-solution__content-inner {
    width: 100%;
    max-width: 560px;
    display: flex;
    flex-direction: column;
    gap: 1.35rem;
    padding: clamp(1.5rem, 4vw, 2rem);
    background: #f7f9fc;
    border: 1px solid rgba(15, 23, 42, 0.06);
    border-radius: 16px;
    box-shadow: 0 12px 28px rgba(15, 23, 42, 0.05);
  }

  .problem-solution__label {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 600;
    margin: 0;
    color: #334155;
  }

  .problem-solution__heading {
    font-size: clamp(2.1rem, 4vw, 2.8rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.15;
    margin: 0;
    color: #0f172a;
  }

  .problem-solution__text {
    font-size: 1.05rem;
    line-height: 1.65;
    color: #1f2937;
    opacity: 0.9;
  }

  .problem-solution__cta {
    margin-top: 0.25rem;
  }

  .problem-solution__cta .button {
    min-width: 170px;
    border-radius: 999px;
    font-weight: 600;
    padding-inline: 1.75rem;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-on-scroll {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
{% endstylesheet %}

