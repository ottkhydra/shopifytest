  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Problem Section"
    },
    {
      "type": "text",
      "id": "problem_label",
      "label": "Problem Label",
      "default": "The Challenge"
