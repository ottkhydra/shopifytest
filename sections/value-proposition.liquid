
{% comment %}
  Value Proposition Section
  Premium benefit cards showcasing core value
{% endcomment %}

<section 
  class="value-proposition section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="value-proposition__container page-width-content">
    {% if section.settings.heading != blank %}
      <div class="value-proposition__header animate-on-scroll">
        <h2 class="value-proposition__title">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="value-proposition__grid">
      {% for block in section.blocks %}
        <div class="value-proposition__card animate-on-scroll" {{ block.shopify_attributes }} data-delay="{{ forloop.index | times: 50 }}">
          {% if block.settings.icon != blank %}
            <div class="value-proposition__icon">
              {% if block.settings.icon contains '.svg' %}
                <img 
                  src="{{ block.settings.icon | asset_url }}" 
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                >
              {% else %}
                <span class="value-proposition__icon-text">{{ block.settings.icon }}</span>
              {% endif %}
            </div>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="value-proposition__card-title">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <p class="value-proposition__card-description">{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .value-proposition {
    padding: clamp(4rem, 6vw, 6rem) 0;
    background: #f7f8fb;
  }

  .value-proposition__container {
    width: 100%;
  }

  .value-proposition__header {
    text-align: center;
    margin-bottom: clamp(2.5rem, 5vw, 4rem);
  }

  .value-proposition__title {
    font-size: clamp(2.1rem, 4vw, 2.8rem);
    margin: 0;
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.15;
    color: #0f172a;
  }

  .value-proposition__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(1.5rem, 4vw, 2rem);
  }

  @media (min-width: 750px) {
    .value-proposition__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1100px) {
    .value-proposition__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .value-proposition__card {
    text-align: left;
    padding: 1.8rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border-radius: 16px;
    background: #ffffff;
    box-shadow: 0 16px 40px rgba(15, 23, 42, 0.08);
    border: 1px solid rgba(15, 23, 42, 0.06);
  }

  .value-proposition__icon {
    width: 56px;
    height: 56px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 14px;
    background: linear-gradient(135deg, #eef2ff 0%, #e0f2fe 100%);
    color: #0f172a;
    font-weight: 700;
  }

  .value-proposition__icon img {
    width: 28px;
    height: 28px;
    object-fit: contain;
  }

  .value-proposition__icon-text {
    font-size: 1.5rem;
    line-height: 1;
  }

  .value-proposition__card-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
    letter-spacing: -0.01em;
    line-height: 1.35;
    color: #0f172a;
  }

  .value-proposition__card-description {
    font-size: 1rem;
    line-height: 1.6;
    opacity: 0.82;
    margin: 0;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-on-scroll {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
{% endstylesheet %}

