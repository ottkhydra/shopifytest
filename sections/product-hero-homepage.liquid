
{% comment %}
  Single Product Hero Section for Homepage
  Designed for conversion-focused single product stores
{% endcomment %}

{% liquid
  # Get the featured product - if no product is set, use the first available product
  assign featured_product = section.settings.product
  if featured_product == blank
    assign featured_product = collections.all.products.first
  endif

  assign product_image = featured_product.featured_media.preview_image
  if section.settings.hero_image != blank
    assign product_image = section.settings.hero_image
  endif

  assign hero_height = section.settings.hero_height
  if hero_height == 'custom'
    assign hero_height = section.settings.hero_height_custom | append: 'vh'
  endif
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section 
  class="product-hero-homepage section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="
    {% render 'spacing-style', settings: section.settings %}
    --hero-height: {{ hero_height }};
  "
>
  <div class="product-hero-homepage__container">
    {% if product_image != blank %}
      <div class="product-hero-homepage__media animate-on-scroll">
        {% if section.settings.hero_video != blank %}
          <div class="product-hero-homepage__video-wrapper">
            <video 
              class="product-hero-homepage__video" 
              autoplay 
              muted 
              loop 
              playsinline
              {% if product_image != blank %}
                poster="{{ product_image | image_url: width: 1920 }}"
              {% endif %}
            >
              <source src="{{ section.settings.hero_video }}" type="video/mp4">
            </video>
            {% if section.settings.show_video_overlay %}
              <div class="product-hero-homepage__video-overlay"></div>
            {% endif %}
          </div>
        {% else %}
          {{
            product_image
            | image_url: width: 1920
            | image_tag:
              loading: 'eager',
              alt: featured_product.title | escape,
              class: 'product-hero-homepage__image',
              sizes: '100vw'
          }}
        {% endif %}
      </div>
    {% endif %}

    <div class="product-hero-homepage__content animate-on-scroll" data-delay="100">
      <div class="product-hero-homepage__content-inner">
        {% if section.settings.subheading != blank %}
          <p class="product-hero-homepage__subheading">{{ section.settings.subheading }}</p>
        {% endif %}

        {% if featured_product != blank %}
          <h1 class="product-hero-homepage__title">
            {{ section.settings.heading | default: featured_product.title }}
          </h1>
        {% else %}
          <h1 class="product-hero-homepage__title">{{ section.settings.heading | default: 'Premium Product' }}</h1>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="product-hero-homepage__description rte">
            {{ section.settings.description }}
          </div>
        {% elsif featured_product != blank and featured_product.description != blank %}
          <div class="product-hero-homepage__description rte">
            {{ featured_product.description | truncatewords: 30 }}
          </div>
        {% endif %}

        {% if featured_product != blank %}
          <div class="product-hero-homepage__price">
            {% render 'price', product_resource: featured_product, show_sale_price_first: true %}
          </div>
        {% endif %}

        {% if featured_product != blank %}
          <div class="product-hero-homepage__cta">
            <a 
              href="{{ featured_product.url }}" 
              class="button button--primary product-hero-homepage__button"
              aria-label="Shop {{ featured_product.title | escape }}"
            >
              {{ section.settings.button_text | default: 'Shop Now' }}
            </a>
          </div>
        {% endif %}

        {% if section.settings.show_trust_badges %}
          <div class="product-hero-homepage__trust-badges">
            {% if section.settings.trust_text_1 != blank %}
              <div class="product-hero-homepage__trust-item">
                {{ section.settings.trust_icon_1 | default: '✓' }}
                <span>{{ section.settings.trust_text_1 }}</span>
              </div>
            {% endif %}
            {% if section.settings.trust_text_2 != blank %}
              <div class="product-hero-homepage__trust-item">
                {{ section.settings.trust_icon_2 | default: '✓' }}
                <span>{{ section.settings.trust_text_2 }}</span>
              </div>
            {% endif %}
            {% if section.settings.trust_text_3 != blank %}
              <div class="product-hero-homepage__trust-item">
                {{ section.settings.trust_icon_3 | default: '✓' }}
                <span>{{ section.settings.trust_text_3 }}</span>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .product-hero-homepage {
    min-height: var(--hero-height, 85vh);
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .product-hero-homepage__container {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: center;
  }

  @media (min-width: 750px) {
    .product-hero-homepage__container {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .product-hero-homepage__media {
    position: relative;
    width: 100%;
    order: 1;
  }

  @media (min-width: 750px) {
    .product-hero-homepage__media {
      order: 0;
    }
  }

  .product-hero-homepage__image,
  .product-hero-homepage__video-wrapper {
    width: 100%;
    border-radius: var(--style-border-radius, 12px);
    overflow: hidden;
  }

  .product-hero-homepage__image {
    aspect-ratio: 4 / 5;
    object-fit: cover;
  }

  .product-hero-homepage__video-wrapper {
    position: relative;
    aspect-ratio: 4 / 5;
  }

  .product-hero-homepage__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-hero-homepage__video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.2);
    pointer-events: none;
  }

  .product-hero-homepage__content {
    width: 100%;
    order: 0;
  }

  @media (min-width: 750px) {
    .product-hero-homepage__content {
      order: 1;
    }
  }

  .product-hero-homepage__content-inner {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 600px;
  }

  .product-hero-homepage__subheading {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.8;
    margin: 0;
    font-weight: 500;
  }

  .product-hero-homepage__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin: 0;
    font-weight: 700;
  }

  .product-hero-homepage__description {
    font-size: 1.125rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  .product-hero-homepage__price {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .product-hero-homepage__cta {
    margin-top: 0.5rem;
  }

  .product-hero-homepage__button {
    width: 100%;
    max-width: 400px;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
  }

  .product-hero-homepage__trust-badges {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .product-hero-homepage__trust-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9375rem;
    opacity: 0.85;
  }

  .product-hero-homepage__trust-item span:first-child {
    font-size: 1.25rem;
    font-weight: 600;
  }

  /* Animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  .animate-on-scroll[data-delay="100"] {
    transition-delay: 0.1s;
  }

  .animate-on-scroll[data-delay="200"] {
    transition-delay: 0.2s;
  }
{% endstylesheet %}

