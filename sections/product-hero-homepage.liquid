
{% comment %}
  Single Product Hero Section for Homepage
  Designed for conversion-focused single product stores
{% endcomment %}

{% liquid
  # Get the featured product - if no product is set, use the first available product
  assign featured_product = section.settings.product
  if featured_product == blank
    assign featured_product = collections.all.products.first
  endif

  assign product_image = featured_product.featured_media.preview_image
  if section.settings.hero_image != blank
    assign product_image = section.settings.hero_image
  endif

  assign hero_height = section.settings.hero_height
  if hero_height == 'custom'
    assign hero_height = section.settings.hero_height_custom | append: 'vh'
  endif
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section 
  class="product-hero-homepage section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="
    {% render 'spacing-style', settings: section.settings %}
    --hero-height: {{ hero_height }};
  "
>
  <div class="product-hero-homepage__container">
    {% if product_image != blank %}
      <div class="product-hero-homepage__media animate-on-scroll">
        {% if section.settings.hero_video != blank %}
          <div class="product-hero-homepage__video-wrapper">
            <video 
              class="product-hero-homepage__video" 
              autoplay 
              muted 
              loop 
              playsinline
              {% if product_image != blank %}
                poster="{{ product_image | image_url: width: 1920 }}"
              {% endif %}
            >
              <source src="{{ section.settings.hero_video }}" type="video/mp4">
            </video>
            {% if section.settings.show_video_overlay %}
              <div class="product-hero-homepage__video-overlay"></div>
            {% endif %}
          </div>
        {% else %}
          {% assign hero_img = product_image | image_url: width: 1920 %}
          <img 
            src="{{ hero_img }}" 
            loading="eager"
            alt="{{ featured_product.title | escape }}"
            class="product-hero-homepage__image"
            sizes="100vw"
          />
        {% endif %}
      </div>
    {% endif %}

    <div class="product-hero-homepage__content animate-on-scroll" data-delay="100">
      <div class="product-hero-homepage__content-inner">
        {% if section.settings.subheading != blank %}
          <p class="product-hero-homepage__subheading">{{ section.settings.subheading }}</p>
        {% endif %}

        {% if featured_product != blank %}
          <h1 class="product-hero-homepage__title">
            {{ section.settings.heading | default: featured_product.title }}
          </h1>
        {% else %}
          <h1 class="product-hero-homepage__title">{{ section.settings.heading | default: 'Premium Product' }}</h1>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="product-hero-homepage__description rte">
            {{ section.settings.description }}
          </div>
        {% elsif featured_product != blank and featured_product.description != blank %}
          <div class="product-hero-homepage__description rte">
            {{ featured_product.description | truncatewords: 30 }}
          </div>
        {% endif %}

        {% if featured_product != blank %}
          <div class="product-hero-homepage__price">
            {% render 'price', product_resource: featured_product, show_sale_price_first: true %}
          </div>
        {% endif %}

        {% if featured_product != blank %}
          <div class="product-hero-homepage__cta">
            <a 
              href="{{ featured_product.url }}" 
              class="button button--primary product-hero-homepage__button product-hero-homepage__button--primary"
              aria-label="Shop {{ featured_product.title | escape }}"
            >
              {{ section.settings.button_text | default: 'Buy Now' }}
            </a>
            {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_link != blank %}
              <a 
                href="{{ section.settings.secondary_button_link }}" 
                class="button button--secondary product-hero-homepage__button product-hero-homepage__button--secondary"
              >
                {{ section.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.show_trust_badges %}
          <div class="product-hero-homepage__trust-badges">
            {% if section.settings.trust_text_1 != blank %}
              <div class="product-hero-homepage__trust-item">
                {{ section.settings.trust_icon_1 | default: '✓' }}
                <span>{{ section.settings.trust_text_1 }}</span>
              </div>
            {% endif %}
            {% if section.settings.trust_text_2 != blank %}
              <div class="product-hero-homepage__trust-item">
                {{ section.settings.trust_icon_2 | default: '✓' }}
                <span>{{ section.settings.trust_text_2 }}</span>
              </div>
            {% endif %}
            {% if section.settings.trust_text_3 != blank %}
              <div class="product-hero-homepage__trust-item">
                {{ section.settings.trust_icon_3 | default: '✓' }}
                <span>{{ section.settings.trust_text_3 }}</span>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .product-hero-homepage {
    min-height: var(--hero-height, 85vh);
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #f7f8fb 0%, #eef1f6 100%);
    padding-inline: clamp(1.25rem, 4vw, 2.5rem);
    padding-block: clamp(2.5rem, 6vw, 4rem);
    border-radius: 20px;
  }

  .product-hero-homepage__container {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(1.75rem, 5vw, 3.5rem);
    align-items: center;
  }

  @media (min-width: 900px) {
    .product-hero-homepage__container {
      grid-template-columns: minmax(0, 1.05fr) minmax(0, 0.95fr);
    }
  }

  .product-hero-homepage__media {
    position: relative;
    width: 100%;
    order: 1;
    filter: drop-shadow(0 18px 60px rgba(15, 23, 42, 0.15));
  }

  @media (min-width: 750px) {
    .product-hero-homepage__media {
      order: 0;
    }
  }

  .product-hero-homepage__image,
  .product-hero-homepage__video-wrapper {
    width: 100%;
    border-radius: 18px;
    overflow: hidden;
    background: #fff;
  }

  .product-hero-homepage__image {
    aspect-ratio: 4 / 5;
    object-fit: cover;
  }

  .product-hero-homepage__video-wrapper {
    position: relative;
    aspect-ratio: 4 / 5;
  }

  .product-hero-homepage__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-hero-homepage__video-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0,0,0,0.25), rgba(0,0,0,0.4));
    pointer-events: none;
  }

  .product-hero-homepage__content {
    width: 100%;
    order: 0;
  }

  @media (min-width: 750px) {
    .product-hero-homepage__content {
      order: 1;
    }
  }

  .product-hero-homepage__content-inner {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 620px;
    background: #ffffffd9;
    backdrop-filter: blur(8px);
    padding: clamp(1.5rem, 4vw, 2rem);
    border-radius: 18px;
    box-shadow: 0 18px 50px rgba(15, 23, 42, 0.08);
    border: 1px solid rgba(15, 23, 42, 0.06);
  }

  .product-hero-homepage__subheading {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    opacity: 0.7;
    margin: 0;
    font-weight: 600;
  }

  .product-hero-homepage__title {
    font-size: clamp(2.6rem, 6vw, 4.25rem);
    line-height: 1.05;
    margin: 0;
    font-weight: 600;
    letter-spacing: -0.025em;
    color: #0f172a;
  }

  .product-hero-homepage__description {
    font-size: 1.15rem;
    line-height: 1.6;
    color: #1f2937;
    opacity: 0.9;
    font-weight: 400;
    max-width: 620px;
  }

  .product-hero-homepage__price {
    font-size: 1.35rem;
    font-weight: 600;
    color: #111827;
  }

  .product-hero-homepage__cta {
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
    align-items: flex-start;
  }

  @media (min-width: 750px) {
    .product-hero-homepage__cta {
      flex-direction: row;
      gap: 1rem;
    }
  }

  .product-hero-homepage__button {
    min-width: 180px;
    padding: 0.95rem 2.2rem;
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    border-radius: 999px;
    transition: transform 0.18s ease, box-shadow 0.2s ease, background-color 0.2s ease;
    box-shadow: 0 14px 40px rgba(59, 130, 246, 0.18);
  }

  .product-hero-homepage__button--primary {
    width: 100%;
    max-width: 260px;
  }

  .product-hero-homepage__button--secondary {
    width: 100%;
    max-width: 240px;
    background: #ffffff;
    color: #0f172a;
    border: 1px solid rgba(15, 23, 42, 0.08);
    box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
  }

  .product-hero-homepage__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 18px 48px rgba(59, 130, 246, 0.24);
  }

  .product-hero-homepage__button--secondary:hover {
    box-shadow: 0 14px 40px rgba(15, 23, 42, 0.12);
  }

  .product-hero-homepage__trust-badges {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .product-hero-homepage__trust-item {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    font-size: 0.98rem;
    color: #111827;
    background: #f9fafb;
    border: 1px solid rgba(15, 23, 42, 0.05);
    border-radius: 12px;
    padding: 0.65rem 0.85rem;
  }

  .product-hero-homepage__trust-item span:first-child {
    font-size: 1.2rem;
    font-weight: 700;
    color: #0f172a;
  }

  /* Animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.55s ease-out, transform 0.55s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  .animate-on-scroll[data-delay="100"] {
    transition-delay: 0.1s;
  }

  .animate-on-scroll[data-delay="200"] {
    transition-delay: 0.2s;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Hero (Homepage)",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product",
      "info": "If not selected, will use the first available product"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      "info": "Optional: Override product featured image"
    },
    {
      "type": "text",
      "id": "hero_video",
      "label": "Hero Video URL",
      "info": "Optional: MP4 video URL for background"
    },
    {
      "type": "checkbox",
      "id": "show_video_overlay",
      "label": "Show Video Overlay",
      "default": false
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Premium Quality"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Leave blank to use product title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "info": "Leave blank to use product description"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary Button Text",
      "default": "Buy Now"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link",
      "info": "Leave blank to hide secondary button"
    },
    {
      "type": "header",
      "content": "Trust Badges"
    },
    {
      "type": "checkbox",
      "id": "show_trust_badges",
      "label": "Show Trust Badges",
      "default": true
    },
    {
      "type": "text",
      "id": "trust_icon_1",
      "label": "Trust Badge 1 Icon",
      "default": "✓"
    },
    {
      "type": "text",
      "id": "trust_text_1",
      "label": "Trust Badge 1 Text",
      "default": "Free Shipping"
    },
    {
      "type": "text",
      "id": "trust_icon_2",
      "label": "Trust Badge 2 Icon",
      "default": "✓"
    },
    {
      "type": "text",
      "id": "trust_text_2",
      "label": "Trust Badge 2 Text",
      "default": "30-Day Returns"
    },
    {
      "type": "text",
      "id": "trust_icon_3",
      "label": "Trust Badge 3 Icon",
      "default": "✓"
    },
    {
      "type": "text",
      "id": "trust_text_3",
      "label": "Trust Badge 3 Text",
      "default": "Secure Checkout"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "options": [
        {
          "value": "page-width",
          "label": "Page Width"
        },
        {
          "value": "full-width",
          "label": "Full Width"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "select",
      "id": "hero_height",
      "label": "Hero Height",
      "options": [
        {
          "value": "70vh",
          "label": "Small (70vh)"
        },
        {
          "value": "85vh",
          "label": "Medium (85vh)"
        },
        {
          "value": "100vh",
          "label": "Full Height (100vh)"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
      "default": "85vh"
    },
    {
      "type": "range",
      "id": "hero_height_custom",
      "label": "Custom Height (vh)",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 85
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
