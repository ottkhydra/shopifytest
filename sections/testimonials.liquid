
{% comment %}
  Testimonials/Reviews Section
  Placeholder for customer reviews - can be extended with app integration
{% endcomment %}

<section 
    class="testimonials section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    <div class="testimonials__container page-width-content">
      {% if section.settings.heading != blank %}
        <div class="testimonials__header animate-on-scroll">
          <h2 class="testimonials__title">{{ section.settings.heading }}</h2>
          {% if section.settings.subheading != blank %}
            <p class="testimonials__subtitle">{{ section.settings.subheading }}</p>
          {% endif %}
        </div>
      {% endif %}

      <div class="testimonials__grid">
        {% for block in section.blocks %}
          <div class="testimonials__item animate-on-scroll" {{ block.shopify_attributes }} data-delay="{{ forloop.index | times: 100 }}">
            {% if block.settings.rating > 0 %}
              <div class="testimonials__rating">
                {% for i in (1..5) %}
                  {% if i <= block.settings.rating %}
                    <span class="testimonials__star">★</span>
                  {% else %}
                    <span class="testimonials__star testimonials__star--empty">☆</span>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}

            {% if block.settings.text != blank %}
              <blockquote class="testimonials__text">
                "{{ block.settings.text }}"
              </blockquote>
            {% endif %}

            {% if block.settings.author != blank %}
              <div class="testimonials__author">
                {% if block.settings.author_image != blank %}
                  <div class="testimonials__author-image">
                    {% assign author_img = block.settings.author_image | image_url: width: 60 %}
                    <img 
                      src="{{ author_img }}" 
                      loading="lazy"
                      alt="{{ block.settings.author | escape }}"
                      class="testimonials__author-img"
                    />
                  </div>
                {% endif %}
                <div class="testimonials__author-info">
                  <strong class="testimonials__author-name">{{ block.settings.author }}</strong>
                  {% if block.settings.author_location != blank %}
                    <span class="testimonials__author-location">{{ block.settings.author_location }}</span>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </section>

{% stylesheet %}
  .testimonials {
    padding: 6rem 0;
  }

  @media (min-width: 750px) {
    .testimonials {
      padding: 8rem 0;
    }
  }

  .testimonials__container {
    width: 100%;
  }

  .testimonials__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .testimonials__title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    margin-bottom: 1rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .testimonials__subtitle {
    font-size: 1.125rem;
    line-height: 1.5;
    opacity: 0.7;
    max-width: 600px;
    margin: 0 auto;
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 750px) {
    .testimonials__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
  }

  @media (min-width: 990px) {
    .testimonials__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .testimonials__item {
    padding: 2.5rem;
    background: var(--color-background);
    border-radius: 12px;
    border: 1px solid var(--color-border, rgba(0, 0, 0, 0.08));
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    transition: border-color 0.2s ease-out, transform 0.2s ease-out;
  }

  .testimonials__item:hover {
    border-color: var(--color-border, rgba(0, 0, 0, 0.15));
  }

  .testimonials__rating {
    display: flex;
    gap: 0.25rem;
    font-size: 1.25rem;
    color: #ffc107;
  }

  .testimonials__star--empty {
    color: rgba(0, 0, 0, 0.2);
  }

  .testimonials__text {
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
    opacity: 0.9;
  }

  .testimonials__author {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border, rgba(0, 0, 0, 0.1));
  }

  .testimonials__author-image {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
  }

  .testimonials__author-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials__author-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .testimonials__author-name {
    font-weight: 600;
    font-size: 0.9375rem;
  }

  .testimonials__author-location {
    font-size: 0.875rem;
    opacity: 0.7;
  }

  /* Animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }
{% endstylesheet %}

