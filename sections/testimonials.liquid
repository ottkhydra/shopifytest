
{% comment %}
  Testimonials/Reviews Section
  Placeholder for customer reviews - can be extended with app integration
{% endcomment %}

<section 
  class="testimonials section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div class="testimonials__container page-width-content">
    {% if section.settings.heading != blank %}
      <div class="testimonials__header animate-on-scroll">
        <h2 class="testimonials__title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="testimonials__subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="testimonials__grid">
      {% for block in section.blocks %}
        <div class="testimonials__item animate-on-scroll" {{ block.shopify_attributes }} data-delay="{{ forloop.index | times: 100 }}">
          <div class="testimonials__item-inner">
            {% if block.settings.rating > 0 %}
              <div class="testimonials__rating">
                {% for i in (1..5) %}
                  {% if i <= block.settings.rating %}
                    <span class="testimonials__star">★</span>
                  {% else %}
                    <span class="testimonials__star testimonials__star--empty">☆</span>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}

            {% if block.settings.text != blank %}
              <blockquote class="testimonials__text">
                “{{ block.settings.text }}”
              </blockquote>
            {% endif %}

            {% if block.settings.author != blank %}
              <div class="testimonials__author">
                {% if block.settings.author_image != blank %}
                  <div class="testimonials__author-image">
                    {% assign author_img = block.settings.author_image | image_url: width: 60 %}
                    <img 
                      src="{{ author_img }}" 
                      loading="lazy"
                      alt="{{ block.settings.author | escape }}"
                      class="testimonials__author-img"
                    />
                  </div>
                {% endif %}
                <div class="testimonials__author-info">
                  <strong class="testimonials__author-name">{{ block.settings.author }}</strong>
                  {% if block.settings.author_location != blank %}
                    <span class="testimonials__author-location">{{ block.settings.author_location }}</span>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .testimonials {
    padding: clamp(4.5rem, 6vw, 7rem) 0;
    background: #ffffff;
  }

  .testimonials__container { width: 100%; }

  .testimonials__header {
    text-align: center;
    margin-bottom: clamp(3rem, 5vw, 4.5rem);
  }

  .testimonials__title {
    font-size: clamp(2.1rem, 4vw, 2.9rem);
    margin-bottom: 0.75rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.15;
    color: #0f172a;
  }

  .testimonials__subtitle {
    font-size: 1.05rem;
    line-height: 1.6;
    opacity: 0.78;
    max-width: 640px;
    margin: 0 auto;
    color: #1f2937;
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(1.5rem, 4vw, 2.25rem);
  }

  @media (min-width: 900px) {
    .testimonials__grid { grid-template-columns: repeat(3, minmax(0, 1fr)); }
  }

  .testimonials__item { display: flex; height: 100%; }

  .testimonials__item-inner {
    padding: clamp(1.4rem, 3vw, 1.9rem);
    background: #f7f9fc;
    border-radius: 16px;
    border: 1px solid rgba(15, 23, 42, 0.06);
    box-shadow: 0 14px 34px rgba(15, 23, 42, 0.08);
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    width: 100%;
  }

  .testimonials__rating {
    display: flex;
    gap: 0.25rem;
    font-size: 1.2rem;
    color: #f59e0b;
  }

  .testimonials__star--empty { color: rgba(0, 0, 0, 0.15); }

  .testimonials__text {
    font-size: 1.05rem;
    line-height: 1.65;
    margin: 0;
    flex-grow: 1;
    color: #111827;
    opacity: 0.9;
  }

  .testimonials__author {
    display: flex;
    align-items: center;
    gap: 0.9rem;
    padding-top: 0.9rem;
    border-top: 1px solid rgba(15, 23, 42, 0.08);
  }

  .testimonials__author-image {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background: #e5e7eb;
  }

  .testimonials__author-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials__author-info { display: flex; flex-direction: column; gap: 0.2rem; }

  .testimonials__author-name {
    font-weight: 700;
    font-size: 0.98rem;
    color: #0f172a;
  }

  .testimonials__author-location {
    font-size: 0.9rem;
    opacity: 0.65;
    color: #475569;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(14px);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }
{% endstylesheet %}

