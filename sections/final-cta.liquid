    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Final CTA"
    }
  ]
}
