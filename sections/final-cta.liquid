
{% comment %}
  Final Call-to-Action Section
  Strong final conversion section at the bottom of the page
{% endcomment %}

{% liquid
  assign featured_product = section.settings.product
  if featured_product == blank
    assign featured_product = collections.all.products.first
  endif

  assign cta_background_image = section.settings.background_image
  assign cta_video = section.settings.background_video
%}

<section 
  class="final-cta section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div 
    class="final-cta__container{% if cta_background_image != blank or cta_video != blank %} final-cta__container--has-background{% endif %}"
    {% if cta_background_image != blank or cta_video != blank %}
      style="--background-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
    {% endif %}
  >
    {% if cta_video != blank %}
      <div class="final-cta__video-wrapper">
        <video 
          class="final-cta__video" 
          autoplay 
          muted 
          loop 
          playsinline
          {% if cta_background_image != blank %}
            poster="{{ cta_background_image | image_url: width: 1920 }}"
          {% endif %}
        >
          <source src="{{ cta_video }}" type="video/mp4">
        </video>
        <div class="final-cta__overlay"></div>
      </div>
    {% elsif cta_background_image != blank %}
      <div class="final-cta__image-wrapper">
        {% assign cta_img = cta_background_image | image_url: width: 1920 %}
        <img 
          src="{{ cta_img }}" 
          loading="lazy"
          alt="{{ section.settings.heading | escape }}"
          class="final-cta__background-image"
        />
        <div class="final-cta__overlay"></div>
      </div>
    {% endif %}

    <div class="final-cta__content page-width-content animate-on-scroll">
      {% if section.settings.subheading != blank %}
        <p class="final-cta__subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="final-cta__title">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="final-cta__description rte">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if featured_product != blank %}
        <div class="final-cta__price">
          {% render 'price', product_resource: featured_product, show_sale_price_first: true %}
        </div>
      {% endif %}

      <div class="final-cta__buttons">
        {% if featured_product != blank %}
          <a 
            href="{{ featured_product.url }}" 
            class="button button--primary final-cta__button final-cta__button--primary"
            aria-label="Shop {{ featured_product.title | escape }}"
          >
            {{ section.settings.button_text | default: 'Buy Now' }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_link != blank %}
          <a 
            href="{{ section.settings.secondary_button_link }}" 
            class="button button--secondary final-cta__button final-cta__button--secondary"
          >
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.show_guarantee %}
        <p class="final-cta__guarantee">
          {{ section.settings.guarantee_text | default: '30-Day Money-Back Guarantee • Free Shipping • Secure Checkout' }}
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .final-cta {
    position: relative;
    overflow: hidden;
    min-height: 520px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(circle at 30% 20%, rgba(99, 102, 241, 0.08), transparent 35%), radial-gradient(circle at 80% 0%, rgba(59, 130, 246, 0.08), transparent 30%), #0f172a;
    padding-inline: clamp(1.5rem, 4vw, 3rem);
    border-radius: 20px;
  }

  @media (min-width: 750px) {
    .final-cta { min-height: 620px; }
  }

  .final-cta__container {
    position: relative;
    width: 100%;
    min-height: inherit;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .final-cta__container--has-background { background: #0f172a; }

  .final-cta__video-wrapper,
  .final-cta__image-wrapper {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .final-cta__video,
  .final-cta__background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(1.05);
  }

  .final-cta__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(15, 23, 42, 0.65), rgba(15, 23, 42, 0.85));
    z-index: 1;
  }

  .final-cta__content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: clamp(2.5rem, 6vw, 3rem);
    max-width: 860px;
    margin: 0 auto;
    color: #e5e7eb;
    display: grid;
    gap: 1rem;
  }

  .final-cta__subheading {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.75;
    margin: 0;
    font-weight: 600;
  }

  .final-cta__title {
    font-size: clamp(2.4rem, 6vw, 3.6rem);
    line-height: 1.05;
    margin: 0;
    font-weight: 650;
    letter-spacing: -0.025em;
    color: #f8fafc;
  }

  .final-cta__description {
    font-size: 1.15rem;
    line-height: 1.6;
    margin: 0 auto 1.5rem;
    opacity: 0.9;
    max-width: 620px;
  }

  .final-cta__price {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1.5rem;
    color: #fff;
  }

  .final-cta__buttons {
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 750px) {
    .final-cta__buttons { flex-direction: row; justify-content: center; }
  }

  .final-cta__button {
    min-width: 200px;
    padding: 0.95rem 2.5rem;
    font-size: 1.05rem;
    font-weight: 700;
    text-align: center;
    border-radius: 999px;
    transition: transform 0.18s ease, box-shadow 0.2s ease, background-color 0.2s ease;
  }

  .final-cta__button--primary {
    box-shadow: 0 16px 44px rgba(99, 102, 241, 0.3);
  }

  .final-cta__button--secondary {
    background: #ffffff;
    color: #0f172a;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 12px 36px rgba(15, 23, 42, 0.2);
  }

  .final-cta__button:hover { transform: translateY(-2px); }

  .final-cta__guarantee {
    font-size: 0.98rem;
    opacity: 0.85;
    margin: 0;
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.55s ease-out, transform 0.55s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Final CTA",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product",
      "info": "If not selected, will use the first available product"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Limited Time Offer"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Experience the Difference?"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Join thousands of satisfied customers who have transformed their lives with our premium product.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary Button Text",
      "default": "Get Yours Now"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "background_video",
