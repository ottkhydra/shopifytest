
{% comment %}
  Final Call-to-Action Section
  Strong final conversion section at the bottom of the page
{% endcomment %}

{% liquid
  assign featured_product = section.settings.product
  if featured_product == blank
    assign featured_product = collections.all.products.first
  endif

  assign cta_background_image = section.settings.background_image
  assign cta_video = section.settings.background_video
%}

<section 
  class="final-cta section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-style', settings: section.settings %}"
>
  <div 
    class="final-cta__container{% if cta_background_image != blank or cta_video != blank %} final-cta__container--has-background{% endif %}"
    {% if cta_background_image != blank or cta_video != blank %}
      style="--background-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
    {% endif %}
  >
    {% if cta_video != blank %}
      <div class="final-cta__video-wrapper">
        <video 
          class="final-cta__video" 
          autoplay 
          muted 
          loop 
          playsinline
          {% if cta_background_image != blank %}
            poster="{{ cta_background_image | image_url: width: 1920 }}"
          {% endif %}
        >
          <source src="{{ cta_video }}" type="video/mp4">
        </video>
        <div class="final-cta__overlay"></div>
      </div>
    {% elsif cta_background_image != blank %}
      <div class="final-cta__image-wrapper">
        {% assign cta_img = cta_background_image | image_url: width: 1920 %}
        <img 
          src="{{ cta_img }}" 
          loading="lazy"
          alt="{{ section.settings.heading | escape }}"
          class="final-cta__background-image"
        />
        <div class="final-cta__overlay"></div>
      </div>
    {% endif %}

    <div class="final-cta__content page-width-content animate-on-scroll">
      {% if section.settings.subheading != blank %}
        <p class="final-cta__subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="final-cta__title">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="final-cta__description rte">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if featured_product != blank %}
        <div class="final-cta__price">
          {% render 'price', product_resource: featured_product, show_sale_price_first: true %}
        </div>
      {% endif %}

      <div class="final-cta__buttons">
        {% if featured_product != blank %}
          <a 
            href="{{ featured_product.url }}" 
            class="button button--primary final-cta__button final-cta__button--primary"
            aria-label="Shop {{ featured_product.title | escape }}"
          >
            {{ section.settings.button_text | default: 'Buy Now' }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_link != blank %}
          <a 
            href="{{ section.settings.secondary_button_link }}" 
            class="button button--secondary final-cta__button final-cta__button--secondary"
          >
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.show_guarantee %}
        <p class="final-cta__guarantee">
          {{ section.settings.guarantee_text | default: '30-Day Money-Back Guarantee • Free Shipping • Secure Checkout' }}
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .final-cta {
    position: relative;
    overflow: hidden;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 750px) {
    .final-cta {
      min-height: 600px;
    }
  }

  .final-cta__container {
    position: relative;
    width: 100%;
    min-height: inherit;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .final-cta__container--has-background {
    background: var(--color-background);
  }

  .final-cta__video-wrapper,
  .final-cta__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .final-cta__video,
  .final-cta__background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .final-cta__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, var(--background-overlay-opacity, 0.4));
    z-index: 1;
  }

  .final-cta__content {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 3rem 1.5rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .final-cta__subheading {
    font-size: 0.9375rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    opacity: 0.6;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .final-cta__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    font-weight: 700;
  }

  .final-cta__description {
    font-size: 1.25rem;
    line-height: 1.5;
    margin-bottom: 2rem;
    opacity: 0.8;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .final-cta__price {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .final-cta__buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    margin-bottom: 2rem;
  }

  @media (min-width: 750px) {
    .final-cta__buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  .final-cta__button {
    min-width: 200px;
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    text-align: center;
  }

  .final-cta__guarantee {
    font-size: 0.9375rem;
    opacity: 0.85;
    margin: 0;
  }

  /* Animations */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Final CTA",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product",
      "info": "If not selected, will use the first available product"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Limited Time Offer"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Experience the Difference?"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Join thousands of satisfied customers who have transformed their lives with our premium product.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary Button Text",
      "default": "Get Yours Now"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "background_video",
      "label": "Background Video URL",
      "info": "MP4 video URL (overrides background image)"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "header",
      "content": "Trust"
    },
    {
      "type": "checkbox",
      "id": "show_guarantee",
      "label": "Show Guarantee Text",
      "default": true
    },
    {
      "type": "text",
      "id": "guarantee_text",
      "label": "Guarantee Text",
      "default": "30-Day Money-Back Guarantee • Free Shipping • Secure Checkout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "options": [
        {
          "value": "page-width",
          "label": "Page Width"
        },
        {
          "value": "full-width",
          "label": "Full Width"
        }
      ],
      "default": "full-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Final CTA"
    }
  ]
}
{% endschema %}

